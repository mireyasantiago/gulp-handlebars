extends templates/layout

block append main
  div.container-fluid.fondo--about
    div.row
      div.col.s8.offset-s1.col.l8.offset-l1
        h3 Portfolio
        h5 Why our clients love to work with us.
  div.container-fluid
    div.row
      div.col.s8.offset-s3.col.l8.offset-l3
        ul#lista
          li
            img.responsive-img(src="../public/img/home/activeicon.png")
            p All
          li
            p Brandend
          li
            p Desing
          li
            p folio
          li
            p Logos
          li
            p Mobile
          li
            p Mockup
    mixin imagenesColores(uno, dos, tres, cuatro)
      div.col.s3.col.l3
        img.responsive-img(src="../public/img/portfolio/#{uno}")
      div.col.s3.col.l3
        img.responsive-img(src="../public/img/portfolio/#{dos}")
      div.col.s3.col.l3
        img.responsive-img(src="../public/img/portfolio/#{tres}")
      div.col.s3.col.l3
        img.responsive-img(src="../public/img/portfolio/#{cuatro}")

    div.row
      +imagenesColores("1.jpg", "2.jpg", "3.jpg", "4.jpg")
      +imagenesColores("5.jpg", "6.jpg", "7.jpg", "8.jpg")
      +imagenesColores("9.jpg", "10.jpg", "11.jpg", "12.jpg")
      +imagenesColores("13.jpg", "14.jpg", "15.jpg", "16.jpg")

    div.row
      div.col.s8.offset-s4.col.l8.offset-l4
        ul.pagination
          li.disabled: a(href="#!")
            i.material-icons chevron_left
          li.active
            a(href="#!") 1
          li.waves-effect
            a(href="#!") 2
          li.waves-effect
            a(href="#!") 3
          li.waves-effect
            a(href="#!") 4
          li.waves-effect
            a(href="#!") 5
          li.waves-effect
            a(href="#!") 7
          li.waves-effect
            a(href="#!") 8
          li.waves-effect
            a(href="#!") 9
          li.waves-effect
            a(href="#!")
            i.material-icons chevron_right
